<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title" />

        <EditText
            android:id="@+id/etItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:minLines="2"
            android:maxLines="4" />

        <CheckBox
            android:id="@+id/cbFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free" />

        <EditText
            android:id="@+id/etItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price (e.g. 9.99)"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnSelectCats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category" />

        <TextView
            android:id="@+id/tvSelectedCats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No categories selected"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:layout_marginTop="8dp" />

        <!-- Post button -->
        <Button
            android:id="@+id/btnPostItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Item"
            android:layout_marginTop="12dp"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
